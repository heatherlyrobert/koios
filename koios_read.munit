   yUNIT_minstr   ("... check error message"            , yerr_upeek   (']'), "(n/a)");
   yUNIT_mindnoc  ();

   yUNIT_mincond  ("verify empty line after ditto");
   yerr_ureset   ();
   yUNIT_minval   ("read the line"                      , READ__single  (&x_file, &x_line, &x_dittoing, &x_dmark, &x_ditto, &x_dline, &x_nrecd, x_recd), 2);
